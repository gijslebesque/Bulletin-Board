html
	head
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css")
	body
		nav
			div(class="nav-wrapper blue-grey darken-1")
				div(class="container")
					a(href="#" class="brand-logo") Bulletin Board
					ul(id="nav-mobile" class="right hide-on-med-and-down")
						li: a(href="/") Home
						li: a(href="messages") Messages
			div.container
				each property in users
					div(class="row")
						div(class="col s12 m12")
							div(class="card blue-grey darken-1")
								div(class="card-content white-text")
									span(class="card-title") #{property.title}
									p #{property.body}


		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js")